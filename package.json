{
  "name": "opm",
  "description": "OpenAPI Project Manager",
  "version": "0.0.1",
  "module": "src/index.ts",
  "bin": {
    "opm": "./dist/opm"
  },
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "bun run src/index.ts",
    "compile": "bun build src/index.ts --compile --outfile ./dist/opm",
    "release": "bun run clean && bun run compile",
    "package": "bun run release && npm pack",
    "upload": "npm run package && npm publish",
    "brew": "npm run release && mkdir -p ./dist/brew && tar -czvf ./dist/brew/opm.tar.gz -C ./dist opm && shasum -a 256 ./dist/brew/opm.tar.gz > ./dist/brew/sha256.txt && bun ./scripts/generate_brew_formula.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chokidar": "^2.1.3",
    "@types/commander": "^2.12.2",
    "@types/js-yaml": "^4.0.9"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chokidar": "^4.0.1",
    "commander": "^12.1.0",
    "js-yaml": "^4.1.0"
  }
}